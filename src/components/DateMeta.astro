---
import FormattedDate from "@/components/FormattedDate.astro";

interface Props {
    post: {
        data: {
            published?: Date;
            modified?: Date;
        };
    };
}

const { post } = Astro.props;

const showComma = post.data.published && post.data.modified;
---

<>
    {
        post.data.published && (
            <>发布于 <span><FormattedDate date={post.data.published} /></span></>
        )
    }{
        showComma && (<>，</>)
    }{
        post.data.modified && (
            <>更新于 <span><FormattedDate date={post.data.modified} /></span></>
        )
    }
</>

<style lang="scss">
    span {
        @apply underline underline-dotted;
    }
</style>