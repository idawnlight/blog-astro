---
interface Props {
    slug: string;
}

const { slug } = Astro.props;

// import 'disqusjs/react/styles/disqusjs.css';
import "@styles/disqusjs.scss";
import { DisqusJS } from "disqusjs/react/es2022";
import config from "@config";
---

<>
    {
        config.disqusJs && (
            <DisqusJS
                client:idle
                siteName={config.name}
                identifier={slug}
                url={Astro.url.href}
                {...config.disqusJs}
            />
        )
    }
</>
