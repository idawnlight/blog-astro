---
import Base from "@layouts/partial/Base.astro";
import Header from "@layouts/partial/Header.astro";
import Footer from "@layouts/partial/Footer.astro";
import config from "@config";

interface Props {
    title?: string;
    lang?: string;
    post?: import('astro:content').CollectionEntry<'blog'>;
}

let { title, lang, post } = Astro.props;
title = title ? `${title} | ${config.name}` : config.name;
lang = lang || "zh-Hans";
---

<Base title={title} lang={lang} post={post}>
    <Header />
    <div class="flex-grow-1">
        <slot />
    </div>
    <Footer />
</Base>
